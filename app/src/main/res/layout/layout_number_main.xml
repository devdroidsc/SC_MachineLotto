<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bluelight"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/magin10"
            android:layout_weight="1"
            android:background="@drawable/bg_page_othen"
            android:padding="@dimen/margin5">

            <LinearLayout
                android:id="@+id/laout_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/item_number"></include>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/laout_savelot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">
                <include layout="@layout/layout_detail"></include>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3">
            <include layout="@layout/layout_keyboad"></include>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>