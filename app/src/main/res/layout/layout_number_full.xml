<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin5"
        android:layout_margin="@dimen/margin5"
        android:background="@drawable/bg_page_othen">
        <TextView
            android:id="@+id/tv_title_number_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/number_full"
            android:gravity="center"
            android:textColor="@color/colorWith"
            android:background="@drawable/bg_tital_numberfull"
            android:textSize="@dimen/text_size30"
            android:paddingTop="@dimen/magin10"
            android:paddingBottom="@dimen/magin10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/re_number_full">
                </android.support.v7.widget.RecyclerView>

            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>