<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_page_othen"
        android:layout_margin="@dimen/margin5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กรอกรหัสยืนยันตัวตน"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size30"
            android:textColor="@color/color_black"
            android:layout_marginBottom="@dimen/magin10"/>
        <EditText
            android:id="@+id/edit_admin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin70"
            android:background="@drawable/bg_edittext"
            android:layout_marginLeft="@dimen/magin40"
            android:layout_marginRight="@dimen/magin40"
            android:gravity="center"
            android:textColor="@color/colorWith"
            android:textSize="@dimen/text_size30"
            />
        <TextView
            android:id="@+id/btn_enter_admin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/magin70"
            android:text="@string/text_enter"
            android:background="@drawable/bg_number_enter"
            android:gravity="center"
            android:textSize="@dimen/text_size30"
            android:textColor="@color/colorWith"
            android:textStyle="bold"
            android:freezesText="true"
            android:paddingRight="@dimen/magin20"
            android:paddingLeft="@dimen/magin20"
            android:layout_marginTop="@dimen/magin10"/>
    </LinearLayout>
</LinearLayout>