<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/magin2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_head_number_full"
            android:padding="@dimen/magin10">
            <TextView
                android:id="@+id/tv_head_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWith"
                android:textSize="@dimen/size_20"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWith">
            <TextView
                android:id="@+id/tv_detail_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_red"
                android:textSize="@dimen/size_20"
                android:layout_marginLeft="@dimen/magin10"
                android:layout_marginBottom="@dimen/magin10"
                android:layout_marginTop="@dimen/magin10"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>